<%- include('../../header.ejs')  %>

<section class="dashboard-wrap mtb-40">
    <div class="container">
        <div class="body-content">
            <div class="row">
                <div class="col-md-3">
                    <div class="dash-left">
<ul>
    <li class="active"><a href="/admin/dashboard" class="active">Dashboard</a></li>
    <li><a href="/admin/blogdisplay">Display Blog</a></li>
    <li><a href="">Categories</a></li>
    <li><a href="">Contact</a></li>
    <li><a href="/admin/aboutdisplay">About</a></li>
    <li><a href="/logout">Logout</a></li>
</ul>
</div> 

                </div>
                <div class="col-md-9">
                    <div class="dash-right">
                        <div class="dash-header">
                            <div class="dash-title">
                                <h1 style="color: #386576;">Blogs</h1>
                            </div>
                            <div class="dash-nav">
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    Add blog
                                </button>

                            </div>
                        </div>
                        <table class="table-bordered table-striped">
                            <tbody><tr class=" table_heading text-white text-center">
                                <th>ID No.</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Action</th>
                            </tr>
                            
                                
                                <% d.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                        <%= item._id %>
                                        </td>
                                        <td>
                                          <%= item.title %> 
                                        </td>
                                        <td>
                                            <%= item.description %>
                                        </td>
                                        <td>
                                          <img src=" <%= item.image.url %>" width="50" alt="">
                                      </td>
                                        
                                        <td>
                                            <a href= "/blogview/<%= item._id %>" class="btn btn-info btn-sm action-btn"><i class="fa-solid fa-eye"></i></a>
                                            <a href="/blogedit/<%= item._id %>" class="btn btn-info btn-sm action-btn"><i class="fa-regular fa-pen-to-square"></i></a>
                                            <a href="/blogdelete/<%= item._id %>" class="btn btn-info btn-sm action-btn"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>  

                               <% }) %>
                                
                                
                        </tbody></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- modal blog create -->
<!-- Button trigger modal -->

  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Add blog</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
        <form action="/insertblog" method="post" enctype="multipart/form-data">
          <div class="md-3">
            <label for="">Title</label>
            <input type="text" name="Title" class="form-control">
          </div>
          <div class="md-3">
            <label for="">Discription</label>
            <textarea type="text" name="description" class="form-control"></textarea>
          </div>
          <div class="md-3">
            <label for="">upload image</label>
            <input type="file" name="image" class="form-control">
          </div>
          <img src="" width="150px" alt="">
          <button type="submit" class="btn btn-primary"> sumbit</button>
        </form>
        </div>
        
      </div>
    </div>
  </div>
<%- include('../../footer.ejs')  %>